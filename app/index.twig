{% block javascript %}
<script>
$(function() {
  $('.main_visual')
    .slick({
      dots: true,
      infinite: true,
      speed: 1000,
      fade: true,
      arrows: false,
      accessibility: false,
      draggable: true,
      slidesToScroll: 1,
      vertical: false,
      autoplay: true,
      cssEase: 'linear',
      centerMode: true,
      lazyLoad: 'ondemand',
      pauseOnHover: false
    });
});
</script>
{% endblock javascript %}

